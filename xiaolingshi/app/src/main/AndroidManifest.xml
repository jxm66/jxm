<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.shop.demo">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activitys.ChoicePicActivity"
            android:theme="@style/Transparent" />
        <activity
            android:name=".activitys.GoodsAddActivity"
            android:theme="@style/Transparent" />
        <activity
            android:name=".activitys.GoodsManageActivity"
            android:theme="@style/Transparent" />
        <activity
            android:name=".activitys.CustomerActivity"
            android:theme="@style/Transparent" />
        <activity
            android:name=".activitys.SearchActivity"
            android:theme="@style/Transparent" />
        <activity
            android:name=".activitys.MyCenterActivity"
            android:theme="@style/Transparent" />
        <activity
            android:name=".activitys.OrderListActivity"
            android:theme="@style/Transparent" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activitys.WebActivity"
            android:theme="@style/Transparent" />
        <activity
            android:name=".activitys.OrderDetailActivity"
            android:theme="@style/Transparent" />
        <activity
            android:name=".activitys.PassWordResetActivity"
            android:theme="@style/Transparent" />
        <activity
            android:name=".activitys.RegisterActivity"
            android:theme="@style/Transparent" />
        <activity
            android:name=".activitys.LoginActivity"
            android:theme="@style/Transparent" />
        <activity
            android:name=".activitys.GoodsinfoActivity"
            android:theme="@style/Transparent" />
    </application>

</manifest>